<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/linearLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/calculateButton" app:layout_constraintVertical_bias="0.87">
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/a1" android:layout_weight="1" android:textSize="16sp"/>
        <TextView
                android:text="x1 + "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/x1Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/a2" android:layout_weight="1" android:textSize="16sp"/>
        <TextView
                android:text="x2 + "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/x2Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/a3" android:layout_weight="1" android:textSize="16sp"/>
        <TextView
                android:text="x3 + "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/x3Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/a4" android:layout_weight="1" android:textSize="16sp"/>
        <TextView
                android:text="x4 ="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/x4Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/answerField" android:layout_weight="1" android:textSize="16sp"/>
    </LinearLayout>
    <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculateButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:onClick="onCalculateClick"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/answers"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/calculateButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.13999999">
        <TextView
                android:text="x1 = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans1Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/x1" android:layout_weight="1" android:textSize="16sp"/>
        <TextView
                android:text="x2 = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans2Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/x2" android:layout_weight="1" android:textSize="16sp"/>
        <TextView
                android:text="x3 = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans3Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/x3" android:layout_weight="1" android:textSize="16sp"/>
        <TextView
                android:text="x4 = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans4Label" android:layout_weight="1"/>
        <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/x4" android:layout_weight="1" android:textSize="16sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>